{

    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": { "PYTHONPATH": "${workspaceFolder}"},
            "args": ["--method", "prompt_official", "--client_number", "4" ,"--thread_number", "2" ,
                    "--client_sample","0.5",
                    "--comm_round", "50", 
                    "--lr", "5e-4", 
                    "--epochs", "10",
                     "--data_dir", "dataset/cifar100/", 
                     "--batch_size", "16", 
                     "--vpt_type", "Deep", 
                     "--vit_type", "vit_base_patch16_224",
                     "--optimizer", "sgd",
                     "--debug",
                     "--dp",
                     "--partition_method=hetero",
                     "--partition_alpha","0.1",
                     "--sample_num","-1",
                     "--prompt_num","10"
                    ] 
        }
    ]
}