{

    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": { "PYTHONPATH": "${workspaceFolder}"},
            "args": ["--method", "l_only", "--client_number", "4" ,"--thread_number", "2" ,
                    "--client_sample","0.5",
                    "--comm_round", "50", 
                    "--lr", "5e-4", 
                    "--epochs", "10",
                     "--data_dir", "dataset/agnews/", 
                     "--batch_size", "16", 
                     "--optimizer", "sgd",
                     "--debug",
                    //  "--sample_num=1000",
                     "--partition_method=hetero",
                     "--partition_alpha","0.5",
                    ] 
        }
    ]
}